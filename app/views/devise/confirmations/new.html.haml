.page-header
  .page-header-inner
    %h1.page-header-title Resend Confirmation Instructions
    .page-header-links
      = render "devise/shared/links"

= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'porkchop-form' }) do |f|
  = f.error_notification
  = f.full_error :confirmation_token

  .form-field-group
    = f.input :email, required: true, autofocus: true

  .form-actions
    = f.button :submit, "Resend confirmation instructions"
