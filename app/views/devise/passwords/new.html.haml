.page-header
  .page-header-inner
    %h1.page-header-title Reset Password
    .page-header-links
      = render "devise/shared/links"

= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'porkchop-form' }) do |f|
  = f.error_notification

  .form-field-group
    = f.input :email, required: true, autofocus: true

  .form-actions
    = f.button :submit, "Send me reset password instructions"
